{
  "name": "PinFlux",
  "version": "2.2.0",
  "description": "PinFlux is a browser extension that enhances your ChatGPT experience by allowing you to pin conversations, making it easier to revisit important discussions.",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AuxionCore/PinFlux.git"
  },
  "author": {
    "name": "Yedidya Averjel",
    "url": "https://github.com/Yedidya10"
  },
  "license": "GNU GENERAL PUBLIC LICENSE V3",
  "bugs": {
    "url": "https://github.com/AuxionCore/PinFlux/issues"
  },
  "homepage": "https://github.com/AuxionCore/PinFlux#readme",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "submit": "webstore upload --source .output/chrome-mv3.zip --auto-publish",
    "publish": "npm run build && npm run zip && npm run submit",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "chrome-webstore-upload-cli": "^3.5.0",
    "typescript": "^5.8.3",
    "wxt": "^0.20.6"
  }
}
